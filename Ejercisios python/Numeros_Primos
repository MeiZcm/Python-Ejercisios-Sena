
def es_primo(num):
    if num < 2:
        return False
    for i in range(2, int(num ** 0.5) + 1):
        if num % i == 0:
            return False
    return True

def suma_primos(n):
    suma = 0
    num_primos = 0
    i = 2
    while num_primos < n:
        if es_primo(i):
            suma += i
            num_primos += 1
        i += 1
    return suma


n = 5
suma = suma_primos(n)
print("La suma de los primeros", n, "numeros primos es:", suma)
